{
  "name": "benyaminrmb/laravel-dynamic-resources",
  "description": "creating dynamic API resources",
  "type": "library",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^11.0|^12.0"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Benyaminrmb\\LaravelDynamicResources\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Benyaminrmb\\LaravelDynamicResources\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Benyamin Rmb",
      "email": "benyaminrmb@gmail.com"
    }
  ],
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint",
    "analyse": "vendor/bin/phpstan analyse"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require-dev": {
    "laravel/pint": "^1.13",
    "orchestra/testbench": "^9.0",
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0",
    "phpstan/phpstan": "^1.10"
  }
}
